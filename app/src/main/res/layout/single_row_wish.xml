<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_5"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/cart_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/space_10">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgSmallProduct"
                android:layout_width="120dp"
                android:layout_height="163dp"
                android:layout_gravity="left"
                android:layout_marginTop="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/thai_logo_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/space_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProductID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Sample product name" />

                <TextView
                    android:id="@+id/txtUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Unit in Sample" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtMrp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MRP : 0000.00" />

                    <TextView
                        android:id="@+id/txtOffer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/offerGreen"
                        android:text="Off - 0.0 %" />

                </LinearLayout>


                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price : 0000.00"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtOutStock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Out of stock"
                    android:textColor="@color/offerRed"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_20"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableStart="@drawable/ic_add_shopping_cart_white_24dp"
                        android:text="Cart"
                        android:textColor="@color/white" />


                    <Button
                        android:id="@+id/btnRemove"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_20"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableStart="@drawable/ic_delete_white_24dp"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>